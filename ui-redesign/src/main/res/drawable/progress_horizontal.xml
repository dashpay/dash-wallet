<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:gravity="center_vertical|fill_horizontal">
        <shape
            android:shape="rectangle"
            android:tint="@color/dash_light_gray">
            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />
            <size android:height="6dp" />
            <solid android:color="@color/dash_light_gray" />
        </shape>
    </item>
    <item
        android:id="@android:id/secondaryProgress"
        android:gravity="center_vertical|fill_horizontal">
        <scale android:scaleWidth="100%">
            <shape
                android:shape="rectangle"
                android:tint="@color/dash_deep_blue">
                <corners
                    android:bottomLeftRadius="10dp"
                    android:bottomRightRadius="10dp"
                    android:topLeftRadius="0dp"
                    android:topRightRadius="0dp" />
                <size android:height="6dp" />
                <solid android:color="@color/dash_deep_blue" />
            </shape>
        </scale>
    </item>
    <item
        android:id="@android:id/progress"
        android:gravity="center_vertical|fill_horizontal">
        <scale android:scaleWidth="100%">
            <shape
                android:shape="rectangle"
                android:tint="@color/dash_blue">
                <corners
                    android:bottomLeftRadius="10dp"
                    android:bottomRightRadius="10dp"
                    android:topLeftRadius="0dp"
                    android:topRightRadius="0dp" />
                <size android:height="6dp" />
                <solid android:color="@color/dash_blue" />
            </shape>
        </scale>
    </item>
</layer-list>