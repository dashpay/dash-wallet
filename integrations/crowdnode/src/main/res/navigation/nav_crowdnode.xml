<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_crowdnode">

    <fragment
        android:id="@+id/entryPointFragment"
        android:name="org.dash.wallet.integrations.crowdnode.ui.EntryPointFragment"
        android:label="CrowdnodeFragment">

        <action
            android:id="@+id/entry_point_to_new_account"
            app:destination="@id/newAccountFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/activity_stay"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>

    <fragment
        android:id="@+id/newAccountFragment"
        android:name="org.dash.wallet.integrations.crowdnode.ui.NewAccountFragment"
        android:label="NewAccountFragment">

        <action
            android:id="@+id/new_account_to_webview"
            app:destination="@id/webViewFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/activity_stay"
            app:popExitAnim="@anim/slide_out_left" />

        <action
            android:id="@+id/new_account_to_portal"
            app:destination="@id/crowdNodePortalFragment"
            app:popUpTo="@id/nav_crowdnode"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/activity_stay"
            app:popExitAnim="@anim/slide_out_left" />

        <action
            android:id="@+id/new_account_to_error"
            app:destination="@id/errorFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/activity_stay"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>

    <fragment
        android:id="@+id/webViewFragment"
        android:name="org.dash.wallet.integrations.crowdnode.ui.WebViewFragment"
        android:label="WebViewFragment">

        <argument android:name="title" app:argType="string" />
        <argument android:name="url" app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/errorFragment"
        android:name="org.dash.wallet.integrations.crowdnode.ui.ErrorFragment"
        android:label="ErrorFragment" />

    <fragment
        android:id="@+id/crowdNodePortalFragment"
        android:name="org.dash.wallet.integrations.crowdnode.ui.PortalFragment"
        android:label="PortalFragment">

    </fragment>
</navigation>