<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context=".ui.portal.QRDialog">

    <View
        android:id="@+id/drag_indicator"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_background"
        android:theme="@style/DragIndicatorBackground"
        tools:background="@color/gray_100" />

    <TextView
        android:id="@+id/title"
        style="@style/Headline5.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scan_qr"
        android:gravity="center_horizontal"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/subtitle"
        style="@style/Body2.ExtraDarkGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/qr_contains_request"
        android:gravity="center_horizontal"
        android:textAlignment="gravity" />


</LinearLayout>