<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".ui.CoinbaseBuyDashFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="68dp">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/Subtitle1"
                android:text="@string/buy_dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/toolbar_subtitle"
                style="@style/Overline"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <org.dash.wallet.common.ui.payment_method_picker.PaymentMethodPicker
        android:id="@+id/payment_method_picker"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_height="46dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <include
        android:id="@+id/auth_limit_banner"
        android:layout_height="46dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        layout="@layout/authorization_limit_banner"
        android:visibility="gone"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/amount_view_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/coinbase_enter_amount_top_guide" />

    <LinearLayout
        android:id="@+id/enter_amount_fragment_placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/amount_view_guide"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical" />
</androidx.constraintlayout.widget.ConstraintLayout>