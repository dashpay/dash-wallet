<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/selectable_round_corners"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/you_send_label"
        style="@style/Caption.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/you_send"
        android:textAllCaps="true"
        android:theme="@style/ListViewButtonBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/input_account_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/input_account_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/input_account_title"
        tools:src="@drawable/ic_dash_blue_filled" />

    <TextView
        android:id="@+id/input_account_title"
        style="@style/Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/input_account_icon"
        app:layout_constraintTop_toBottomOf="@+id/you_send_label"
        tools:text="@string/currency_BTC" />

    <TextView
        android:id="@+id/input_account_subtitle"
        style="@style/Caption.Secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:lineSpacingExtra="2sp"
        tools:text="@string/currency_BTC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/input_account_title"
        app:layout_constraintTop_toBottomOf="@+id/input_account_title"/>

    <TextView
        android:id="@+id/input_account"
        style="@style/Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/input_account_subtitle"
        app:layout_constraintTop_toTopOf="@id/input_account_title"
        tools:text="1234" />

    <TextView
        android:id="@+id/input_account_hint_label"
        style="@style/Caption.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        tools:text="@string/from_your_coinbase_account"
        android:layout_marginTop="5dp"
        android:theme="@style/ListViewButtonBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_account_subtitle" />

    <View
        android:id="@+id/input_account_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@+id/input_account_hint_label" />

    <TextView
        android:id="@+id/you_receive_label"
        style="@style/Caption.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/you_receive"
        android:textAllCaps="true"
        android:theme="@style/ListViewButtonBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_account_separator" />

    <ImageView
        android:id="@+id/convert_output_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/convert_output_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/convert_output_title"
        tools:src="@drawable/ic_dash_blue_filled" />

    <TextView
        android:id="@+id/convert_output_title"
        style="@style/Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/convert_output_icon"
        app:layout_constraintTop_toBottomOf="@+id/you_receive_label"
        tools:text="@string/currency_BTC" />

    <TextView
        android:id="@+id/convert_output_subtitle"
        style="@style/Caption.Secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:lineSpacingExtra="2sp"
        tools:text="@string/currency_BTC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/convert_output_title"
        app:layout_constraintTop_toBottomOf="@+id/convert_output_title"/>

    <TextView
        android:id="@+id/output_account"
        style="@style/Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/convert_output_subtitle"
        app:layout_constraintTop_toTopOf="@id/convert_output_title"
        tools:text="1234" />

    <TextView
        android:id="@+id/output_account_hint_label"
        style="@style/Caption.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        tools:text="@string/to_dash_wallet_on_this_device"
        android:layout_marginTop="5dp"
        android:theme="@style/ListViewButtonBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/convert_output_subtitle" />

    <View
        android:id="@+id/output_account_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@+id/output_account_hint_label" />

    <TextView
        android:id="@+id/purchase_label"
        style="@style/Caption.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:text="@string/purchase"
        android:textAllCaps="true"
        android:theme="@style/ListViewButtonBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/output_account_separator" />


    <TextView
        android:id="@+id/purchase_amount"
        style="@style/Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/purchase_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/purchase_label"
        tools:text="109.00 US$" />

    <View
        android:id="@+id/purchase_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        app:layout_constraintBottom_toBottomOf="@+id/purchase_label" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coinbase_fee_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/purchase_label"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/coinbase_fee_label"
            style="@style/Caption.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:textAllCaps="true"
            android:gravity="center_vertical"
            android:text="@string/coinbase_fee"
            android:theme="@style/ListViewButtonBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
           />

        <ImageView
            android:id="@+id/coinbase_fee_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:src="@drawable/ic_info_blue"
            app:layout_constraintBottom_toBottomOf="@+id/coinbase_fee_label"
            app:layout_constraintStart_toEndOf="@id/coinbase_fee_label"
            app:layout_constraintTop_toTopOf="@id/coinbase_fee_label" />

        <TextView
            android:id="@+id/coinbase_fee_amount"
            style="@style/Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/coinbase_fee_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/coinbase_fee_label"
            tools:text="10.00 US$" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/coinbase_fee_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        app:layout_constraintBottom_toBottomOf="@+id/coinbase_fee_info_container" />

    <TextView
        android:id="@+id/total_label"
        style="@style/Caption.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:text="@string/total"
        android:textAllCaps="true"
        android:theme="@style/ListViewButtonBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coinbase_fee_info_container" />

    <TextView
        android:id="@+id/total_amount"
        style="@style/Body2.Medium"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/total_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/total_label"
        tools:text="200.00 US$" />
</androidx.constraintlayout.widget.ConstraintLayout>

