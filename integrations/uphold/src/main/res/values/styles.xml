<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="uphold_confirmation_dialog_currency_text" parent="MontserratMedium.DB.14">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_width">86dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="uphold_confirmation_dialog_currency_icon">
        <item name="android:tint">@color/darkest_blue</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
    </style>

    <style name="uphold_confirmation_dialog_currency_label">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="uphold_confirmation_dialog_currency_row">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>