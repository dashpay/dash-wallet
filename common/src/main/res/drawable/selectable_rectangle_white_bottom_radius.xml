<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/button_ripple_color">
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:radius="1dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <solid android:color="@color/background_secondary" />
        </shape>
    </item>
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:radius="1dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <solid android:color="@android:color/black" />
        </shape>
    </item>
</ripple>
