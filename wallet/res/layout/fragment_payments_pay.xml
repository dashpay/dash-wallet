<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:orientation="vertical"
    tools:context="de.schildbach.wallet.ui.payments.PaymentsPayFragment">

    <de.schildbach.wallet.ui.widget.PaymentsButtonView
        android:id="@+id/pay_by_qr_button"
        style="@style/MenuRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:pb_icon="@drawable/ic_qr"
        app:pb_sub_title="@string/payments_pay_by_qr_sub_title"
        app:pb_title="@string/payments_pay_by_qr_title" />

    <de.schildbach.wallet.ui.widget.PaymentsButtonView
        android:id="@+id/pay_to_address"
        style="@style/MenuRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pb_active="false"
        app:pb_icon="@drawable/ic_pay_copied_address"
        app:pb_sub_title="@string/payments_pay_to_clipboard_sub_title"
        app:pb_title="@string/payments_pay_to_clipboard_title" />

</LinearLayout>
