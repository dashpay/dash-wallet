<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wallet_address_dialog_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/wallet_address_dialog_image"
        android:layout_width="@dimen/bitmap_dialog_qr_size"
        android:layout_height="@dimen/bitmap_dialog_qr_size"
        android:background="@color/bg_bright"
        android:contentDescription="@null"
        android:keepScreenOn="true"
        android:padding="6dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/wallet_address_dialog_label_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/wallet_address_dialog_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="gravity"
            android:layout_marginBottom="@dimen/list_entry_padding"
            android:layout_marginTop="@dimen/list_entry_padding"
            android:gravity="left"
            style="@style/Body1.Medium" />

        <TextView
            android:id="@+id/wallet_address_dialog_hint"
            android:layout_width="@dimen/bitmap_dialog_qr_size"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="gravity"
            android:layout_marginBottom="@dimen/list_entry_padding_vertical"
            android:paddingLeft="@dimen/list_entry_padding_horizontal"
            android:paddingRight="@dimen/list_entry_padding_horizontal"
            android:text="@string/wallet_address_dialog_fragment_hint"
            android:textColor="@color/fg_less_significant"
            style="@style/Overline" />

    </LinearLayout>

</LinearLayout>