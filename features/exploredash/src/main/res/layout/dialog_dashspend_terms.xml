<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.dash.wallet.features.exploredash.ui.ctxspend.dialogs.DashDirectLoginInfoDialog">

    <ImageButton
        android:id="@+id/collapse_button"
        style="@style/DialogCloseButton" />

    <ImageView
        android:id="@+id/dialog_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_ionia" />

    <TextView
        android:id="@+id/dialog_title"
        style="@style/Headline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:text="@string/dashspend_terms_conditions" />

    <TextView
        android:id="@+id/dialog_message"
        style="@style/Body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:text="@string/tap_link_to_proceed" />

    <Button
        android:id="@+id/terms_link"
        style="@style/Button.Tertiary.Small.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/view_terms_conditions"
        android:layout_gravity="center"
        android:drawablePadding="8dp"
        android:drawableEnd="@drawable/ic_open_link" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <CheckBox
        android:id="@+id/accept_terms_checkbox"
        style="@style/CheckBoxSimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="14dp"
        android:text="@string/accept_terms_conditions" />

    <Button
        android:id="@+id/create_account_button"
        style="@style/Button.Primary.Large.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="40dp"
        android:text="@string/account_create"
        android:enabled="false" />

</LinearLayout>