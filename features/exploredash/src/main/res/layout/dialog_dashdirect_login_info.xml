<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="org.dash.wallet.features.exploredash.ui.dashdirect.dialogs.DashDirectLoginInfoDialog">

    <ImageButton
        android:id="@+id/collapse_button"
        style="@style/DialogCloseButton" />

    <ImageView
        android:id="@+id/dialog_icon"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:src="@drawable/logo_dashdirect" />

    <TextView
        android:id="@+id/dialog_title"
        style="@style/Headline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textStyle="bold"
        android:text="@string/buy_gift_card" />

    <TextView
        android:id="@+id/dialog_message"
        style="@style/Body2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="gravity"
        android:text="@string/dashdirect_create_account" />

    <Button
        android:id="@+id/dialog_extra_message"
        style="@style/Button.Tertiary.Small.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:drawablePadding="8dp"
        android:drawableEnd="@drawable/ic_open_link"
        android:layout_marginBottom="40dp"
        android:text="@string/dash_direct_url" />

    <Button
        android:id="@+id/dialog_positive_button"
        style="@style/Button.Primary.Large.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/create_new_account" />

    <Button
        android:id="@+id/dialog_negative_button"
        style="@style/Button.Tertiary.Large.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:text="@string/login" />

</LinearLayout>