<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="org.dash.wallet.features.exploredash.ui.ctxspend.dialogs.CTXSpendLoginInfoDialog">

    <ImageButton
            android:id="@+id/collapse_button"
            style="@style/DialogCloseButton" />

    <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            tools:src="@drawable/ic_ctxspend_logo" />

    <TextView
            android:id="@+id/dialog_title"
            style="@style/Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textStyle="bold"
            tools:text="@string/buy_a_gift_card_with_your_ctx_spend_account" />

    <TextView
            android:id="@+id/dialog_message"
            style="@style/Body2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="gravity"
            app:layout_constraintTop_toTopOf="@id/title"
            tools:text="@string/create_an_account_at_ctx_spend_or_log_in_to_the_existing_one" />

    <Button
            android:id="@+id/dialog_extra_message"
            style="@style/Button.Tertiary.Small.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:drawablePadding="8dp"
            android:drawableEnd="@drawable/ic_open_link"
            android:layout_marginBottom="40dp"
            app:layout_constraintTop_toTopOf="@id/title"
            tools:text="ctxspend.org" />

    <Button
            android:id="@+id/dialog_positive_button"
            style="@style/Button.Primary.Large.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            tools:text="Create New Account" />

    <Button
            android:id="@+id/dialog_negative_button"
            style="@style/Button.Tertiary.Large.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            tools:text="Login" />

</LinearLayout>